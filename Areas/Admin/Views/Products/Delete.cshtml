@model ThucHanhLanCuoi.Models.Product
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">XÓA SẢN PHẨM</h2>

<div class="bg-danger">Bạn chắc chắn muốn xóa danh mục này không?</div>
@Html.Partial("PVProductInfo", Model)

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" value="Xóa" class="btn btn-primary" />
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-primary btn-sm" })
        </div>
    </div>
}