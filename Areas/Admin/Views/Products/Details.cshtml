    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">CHI TIẾT SẢN PHẨM</h2>

@Html.Partial("PVProductInfo", Model)
<div class="form-group">
    <div class="col-md-offset-3 col-md-9">
