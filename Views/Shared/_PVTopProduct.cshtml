
@model ThucHanhLanCuoi.Models.ViewModel.ProductDetailVM
@using PagedList.Mvc


<!-- Hiển thị danh sách sản phẩm bán chạy -->
@if (Model.TopProducts != null && Model.TopProducts.Any())
{
    <section class="container-fluid listProduct">
        <h4 style="font-weight:bold;">Sản phẩm bán chạy</h4>
        <ul class="list-container">
            @foreach (var product in Model.TopProducts)
            {
                <li class="product-item">
                    <div>
                        <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID })">
                            <img src="@product.ProductImage" />
                        </a>
                    </div>
                    <div>
                        <h5>@product.ProductName</h5>
                        <p class="prodSale">@product.ProductPrice.ToString("C")</p>
                    </div>
                </li>
            }
        </ul>
    </section>

    <!-- Hiển thị phân trang -->
    <div class="pagination-container">
        @Html.PagedListPager(Model.TopProducts, page => Url.Action("ProductDetails", "Home", new { page }))
    </div>
}
