﻿@model IEnumerable<ThucHanhLanCuoi.Models.User>
@using PagedList
@using PagedList.Mvc   
@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2>Quản lý người dùng</h2>

    <div class="sort-options">
        <span>Sắp xếp theo:</span>
        @Html.ActionLink("Tên tăng dần", "Index", new { sortOrder = "" }, new { @class = "sort-link" })
        <span>|</span>
        @Html.ActionLink("Tên giảm dần", "Index", new { sortOrder = "name_desc" }, new { @class = "sort-link" })
    </div>

    <p>
        @Html.ActionLink("Tạo tài khoản mới", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tài Khoản</th>
                <th>Mật Khẩu</th>
                <th>Phân Quyền</th>
                <th>Chức Năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Password</td>
                    <td>@user.UserRole</td>
                    <td>
                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = user.Username }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = user.Username }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = user.Username }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!-- Phân trang -->
    </div>
</div>

<!-- CSS cho giao diện -->
<style>
    .search-box {
        margin-bottom: 20px;
    }

    .sort-options {
        margin-bottom: 15px;
    }

    .sort-link {
        text-decoration: none;
        font-weight: bold;
        color: #007bff;
    }

    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

        .pagination-container .pagination {
            display: flex;
            list-style: none;
            padding: 0;
        }

            .pagination-container .pagination li a {
                padding: 8px 12px;
                text-decoration: none;
                color: #4CAF50;
                border: 1px solid #4CAF50;
                font-weight: bold;
                border-radius: 5px;
                margin: 0 5px;
                background-color: #fff;
            }
</style>