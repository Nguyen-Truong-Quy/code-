@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<link href="~/CSS/Login.css" rel="stylesheet" />

@model ThucHanhLanCuoi.Models.ViewModel.LoginVM


<div id="login-container">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
                <h2 class="col-md-12 text-center">Đăng nhập tài khoản</h2>
            </div>

            <!-- Trường Username -->
            <div class="form-group">                                                                        
                @Html.LabelFor(model => model.Username, new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Trường Password -->
            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Checkbox Remember Me -->
            <div class="form-check">
                <input type="checkbox" id="rememberMe" name="rememberMe" class="form-check-input" />
                <label for="rememberMe" class="form-check-label">Ghi nhớ tôi</label>
            </div>

            <!-- Nút Đăng nhập và liên kết Đăng ký -->
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <input type="submit" value="Đăng nhập" class="btn btn-info accountbtn" /><br />
                    <p class="text-center">Bạn chưa có tài khoản? <a href="@Url.Action("Register", "Account")">Đăng ký</a></p>
                </div>
            </div>
        </div>
    }
</div>
