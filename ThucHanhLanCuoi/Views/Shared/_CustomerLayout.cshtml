<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Myshoes.vn</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
    <link href="~/CSS/Layout_Customer.css" rel="stylesheet" />
</head>
<body>
    <!-- Top Header -->
    <header class="Top-Header">
        <div class="Logo">
            <a href="@Url.Action("TrangChu_Customer", "CustomerHome")">
                Myshoes<span class="logo-vn">.vn</span>
            </a>
        </div>

        <div class="ThanhTimKiem">
            <input type="text" placeholder="Tìm kiếm sản phẩm..." />
            <button type="submit">
                <i class="fa fa-search"></i>
            </button>
        </div>

        <div class="Menu-Top">
            <div class="account">
                <i class="fas fa-user"></i>
                <div class="account-details">
                    <span class="account-title">Tài khoản</span>
                    <span class="account-links" style="color: white;">Đăng nhập - Đăng ký</span>
                </div>
                <div class="accountBox">
                    @if (Session["login"] != null && (bool)Session["login"] == true)
                    {
                        <!-- Nếu người dùng chưa đăng nhập -->
                        <a href="@Url.Action("InfoAccount", "Account")" class="account-links">Thông tin tài khoản</a>
                        <a href="@Url.Action("Logout", "Account")" class="account-links">Đăng xuất</a>

                    }
                    else
                    {

                        <!-- Nếu người dùng đã đăng nhập -->
                        <a href="@Url.Action("Login", "Account")" class="account-links">Đăng nhập</a>
                        <a href="@Url.Action("Register", "Account")" class="account-links">Đăng ký</a>
                    }
                </div>

            </div>
            <a href="@Url.Action("Cart", "Store")" class="store">
                <i class="fas fa-shopping-cart"></i>
                <span class="cart-count">0</span>
            </a>
        </div>
    </header>

    <!-- Bottom Header -->
    <div class="header-bottom">
        <ul class="MucLucGiay">
            <li><a href="@Url.Action("TrangNike", "TrangGiay", new { brand = "Nike" })">Giày Nike</a> <span class="label new">New</span></li>
            <li><a href="@Url.Action("TrangAdidas", "TrangGiay", new { brand = "Adidas" })">Giày Adidas</a> <span class="label sale">Sale</span></li>
            <li><a href="@Url.Action("TrangLacoste", "TrangGiay", new { brand = "Lacoste" })">Giày Lacoste</a> <span class="label new">New</span></li>
            <li><a href="@Url.Action("TrangPuma", "TrangGiay", new { brand = "Puma" })">Giày Puma</a> <span class="label sale">Sale</span></li>
            <li><a href="@Url.Action("TrangAsics", "TrangGiay", new { brand = "Asics" })">Giày Asics</a> <span class="label new">New</span></li>
            <li><a href="@Url.Action("TrangGiayTheThao", "TrangGiay", new { category = "Sports" })">Giày Thể Thao</a></li>
            <li><a href="@Url.Action("TrangSale", "TrangGiay", new { sale = true })">Sale</a> <span class="icon-sale">%</span></li>
        </ul>
        <div class="Right-Menu">
            <a href="@Url.Action("LienHe", "Home")"><i class="fas fa-envelope"></i> Liên Hệ</a>
            <a href="@Url.Action("TrangBlog", "Blog")"><i class="fas fa-pen"></i> Blog</a>
        </div>
    </div>

    @RenderBody()
</body>
@Html.Partial("_Footer")
</html>